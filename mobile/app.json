{
  "expo": {
    "name": "Elektrikçiler",
    "slug": "elektrikciler-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*",
      "!assets/images/header_bg.png",
      "!assets/images/onboarding_trust_secure_neon.png",
      "!assets/images/onboarding_get_offers_neon.png"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.elektrikciler.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Arıza fotoğrafları çekebilmeniz için kameraya erişim izni gerekiyor.",
        "NSPhotoLibraryUsageDescription": "Galeriden fotoğraf seçebilmeniz için kütüphaneye erişim izni gerekiyor.",
        "NSLocationWhenInUseUsageDescription": "Size en yakın iş ilanlarını ve elektrikçileri göstermek için konum izni gerekiyor."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "package": "com.elektrikciler.app",
      "permissions": [
        "NOTIFICATIONS",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "config": {
        "googleMaps": {
          "apiKey": ""
        }
      },
      "locationPermissions": {
        "locationWhenInUsePermission": "Size en yakın iş ilanlarını ve elektrikçileri göstermek için konum izni gerekiyor.",
        "locationAlwaysAndWhenInUsePermission": "Size en yakın iş ilanlarını ve elektrikçileri göstermek için konum izni gerekiyor."
      }
    },
    "plugins": [
      "expo-router",
      "expo-asset",
      "expo-font",
      [
        "expo-notifications",
        {
          "color": "#6200EE"
        }
      ]
    ],
    "scheme": "elektrikciler",
    "platforms": [
      "ios",
      "android"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "67961b08-8410-4aaa-9c78-a104a018745a"
      }
    },
    "owner": "mustafapakdil0101"
  }
}
