{
  "name": "elektrikciler",
  "version": "1.0.0",
  "description": "Elektrik√ßiler Platform - Mobil Uygulama ve Backend",
  "private": true,
  "scripts": {
    "start": "concurrently -n \"BACKEND,MOBILE\" -c \"blue,green\" --raw \"npm:backend\" \"npm:mobile\"",
    "start:mobile": "cd mobile && npm start",
    "start:backend": "cd backend && npm run dev",
    "backend": "cd backend && npm run dev",
    "mobile": "cd mobile && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../mobile && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "node-forge": "^1.3.3"
  }
}
